<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="FlealessMarket.Home">
    <RelativeLayout x:Name="main">
        <Image x:Name="background_image" Source="TripleGradient"></Image>
        <Picker x:Name="picker" Title="General" TextColor="Black" HorizontalOptions="CenterAndExpand">
            <Picker.ItemsSource>
                <x:Array Type="{x:Type x:String}">
                    <x:String>General</x:String>
                    <x:String>Chairs</x:String>
                    <x:String>Couches</x:String>
                    <x:String>Tables</x:String>
                    <x:String>Beds</x:String>
                    <x:String>Strollers</x:String>
                </x:Array>
            </Picker.ItemsSource>
        </Picker>
        <Label x:Name="category_label" Text="Pick a category:" TextColor="White"></Label>
        <ScrollView HorizontalOptions="CenterAndExpand" x:Name="scroll">
            <Grid RowSpacing="10" ColumnSpacing="10" x:Name="home_grid"></Grid>
        </ScrollView>
    </RelativeLayout>
</ContentPage>
