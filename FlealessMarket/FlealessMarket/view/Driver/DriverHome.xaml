        <!--Define component positions in code-->
        <maps:Map VerticalOptions="FillAndExpand" MapType="Hybrid" x:Name="map"></maps:Map>
        <Button x:Name="goButton" TextColor="White"></Button>
        <RelativeLayout BackgroundColor="White" x:Name="internal_relative"></RelativeLayout>
        <Label x:Name="searching" TextColor="White"></Label>
        <Button x:Name="cancel" TextColor="Blue"></Button>
        <ActivityIndicator x:Name="activity"></ActivityIndicator>

        <!--Item found popup window for driver screen-->
        <RelativeLayout x:Name="popup_content">
            <ImageButton x:Name="item_image"></ImageButton>
            <Label x:Name="product_name" TextColor="White"></Label>
            <Label x:Name="distance" TextColor="White"></Label>
            <Label x:Name="address" TextColor="White"></Label>
            <ImageButton x:Name="yes" Source="yes"></ImageButton>
            <ImageButton x:Name="no" Source="no"></ImageButton>
        </RelativeLayout>
        <!-- Back -->
        <ImageButton x:Name="back" Clicked="Back_OnClicked"></ImageButton>
